services:
  db:
    image: timescale/timescaledb:latest-pg16
    container_name: cartrita_db
    restart: unless-stopped
    env_file:
      - ./.env
    ports:
      - "5434:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
  backend:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: cartrita_backend
    restart: unless-stopped
    env_file:
      - ./.env
    ports:
      - "8000:8000"
    depends_on:
      - db
volumes:
  postgres_data:
