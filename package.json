{
  "name": "dat-bitch-cartrita-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/shared",
    "packages/robotics",
    "packages/mcp-core",
    "packages/orchestrator",
    "packages/supervisor-intelligence",
    "packages/mcp-testing"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
  "dev:full": "concurrently -k -n BACKEND,FRONTEND -c magenta,cyan 'npm:dev:backend' 'npm:dev'",
  "dev:mcp": "npm run dev --workspace=orchestrator",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run start --workspace=backend",
    "start:backend": "npm run start --workspace=backend",
  "start:mcp": "npm run start --workspace=orchestrator",
  "proto:gen": "bash proto/generate.sh",
  "mcp:test": "npm test --workspaces --if-present --workspace=mcp-testing",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint . --ext .js,.ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo 'No tests specified' && exit 0",
  "prepare": "husky",
  "secrets:scan": "detect-secrets scan > .secrets.baseline || true",
  "secrets:audit": "detect-secrets audit .secrets.baseline",
    "secrets:check": "detect-secrets scan --baseline .secrets.baseline || true",
  "docs:reorg": "bash scripts/reorganize-docs.sh",
    "docs:apply": "DRY_RUN=0 bash scripts/reorganize-docs.sh",
    "docs:build": "node scripts/build-master-readme.mjs",
    "docs:journal": "bash scripts/add_journal_entry.sh"
  ,"scan:keys": "node scripts/security/scan-api-keys.mjs > key-inventory.json"
  ,"keys:rotate": "node scripts/security/rotate-keys.mjs"
  ,"secrets:precommit": "node scripts/security/precommit-secret-check.mjs"
  ,"keys:status": "curl -s localhost:${PORT:-8001}/api/internal/keys/status || true"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@tailwindcss/postcss": "^4.0.0-alpha.16",
    "@tailwindcss/typography": "^0.5.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "concurrently": "^8.2.2",
  "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-header": "^3.1.1",
  "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jscodeshift": "^17.3.0",
    "lint-staged": "^16.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "description": "Personal Life OS Edition - Comprehensive AI Assistant",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Punky2280/dat-bitch-cartrita.git"
  },
  "keywords": [
    "ai",
    "assistant",
    "personal-os",
    "chatbot"
  ],
  "author": "Robert",
  "license": "AGI Commons License v4",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "bugs": {
    "url": "https://github.com/Punky2280/dat-bitch-cartrita/issues"
  },
  "homepage": "https://github.com/Punky2280/dat-bitch-cartrita#readme",
  "dependencies": {
    "@vitest/ui": "^3.2.4",
    "frontend": "^0.0.0",
    "git-format-staged": "^3.1.1"
  }
}
