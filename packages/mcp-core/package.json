{
  "name": "@cartrita/mcp-core",
  "version": "1.0.0",
  "description": "Core MCP (Master Control Program) library for Cartrita hierarchical agent system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:generated": "eslint src/generated/**/*.ts --fix || true",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": ["mcp", "agent", "ai", "orchestration", "microservices"],
  "author": "Cartrita Development Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "pino": "^8.16.2",
    "eventemitter3": "^5.0.1",
    "msgpackr": "^1.10.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/auto-instrumentations-node": "^0.40.3",
    "@opentelemetry/exporter-otlp-grpc": "^0.45.1",
    "@opentelemetry/exporter-otlp-http": "^0.45.1",
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "google-protobuf": "^3.21.2",
    "protobufjs": "^7.2.5",
    "ts-proto": "^1.166.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./transport": {
      "types": "./dist/transport/index.d.ts",
      "import": "./dist/transport/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    },
    "./otel": {
      "types": "./dist/otel/index.d.ts",
      "import": "./dist/otel/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cartrita/mcp.git"
  },
  "bugs": {
    "url": "https://github.com/cartrita/mcp/issues"
  },
  "homepage": "https://github.com/cartrita/mcp#readme"
}