# Cartrita V2 Multi-Agent OS - Environment Configuration
# Copy this to .env and customize for your environment

# ===== DATABASE CONFIGURATION =====
POSTGRES_PASSWORD=cartrita_secure_production_pass_2024
REDIS_PASSWORD=cartrita_redis_production_pass_2024

# ===== APPLICATION SECRETS =====
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum-change-this
SESSION_SECRET=your-super-secure-session-secret-change-this-too

# ===== AI & ML API KEYS =====
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here
DEEPGRAM_API_KEY=your-deepgram-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# ===== EXTERNAL SERVICES =====
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# ===== MONITORING =====
GRAFANA_PASSWORD=admin

# ===== DEVELOPMENT SETTINGS =====
# Set to 'development' for dev mode, 'production' for prod
NODE_ENV=production
LOG_LEVEL=info

# ===== OPTIONAL INTEGRATIONS =====
# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# ===== FEATURE FLAGS =====
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_FUSION_PIPELINE=true
ENABLE_VOICE_PROCESSING=true
ENABLE_VISION_PROCESSING=true
ENABLE_AMBIENT_INTELLIGENCE=true

# ===== PERFORMANCE TUNING =====
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_MS=30000
MAX_UPLOAD_SIZE_MB=50
CACHE_TTL_SECONDS=3600

# ===== SECURITY SETTINGS =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3001,https://yourdomain.com
SECURE_COOKIES=true
HELMET_CSP_ENABLED=true
