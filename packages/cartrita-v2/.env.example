# Cartrita V2 Enhanced - Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://robert:punky1@localhost:5432/dat-bitch-cartrita
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dat-bitch-cartrita
POSTGRES_USER=robert
POSTGRES_PASSWORD=punky1

# Security Configuration
JWT_SECRET=cartrita-v2-ultra-secure-secret-change-in-production
JWT_EXPIRES_IN=24h

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty

# AI Service Configuration
RAG_ENABLED=true
MCP_ENABLED=true
LANGCHAIN_ENABLED=true
COMPUTER_USE_ENABLED=false

# Performance Configuration
MAX_WORKERS=4
REQUEST_TIMEOUT=120000
BODY_LIMIT=104857600

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Cartrita Personality Configuration
CARTRITA_PERSONALITY_LEVEL=9
CARTRITA_CONFIDENCE_LEVEL=10
CARTRITA_HELPFULNESS_LEVEL=10