{
  "name": "cartrita-v2-master",
  "version": "2.0.0",
  "description": "Cartrita V2 - AI Operating System with Hybrid Fastify/FastAPI Architecture + MCP Copilot Delegation",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:python": "cd py && python3 -m uvicorn main:app --reload --port 8003",
    "dev:fastapi": "cd py && PORT=8002 OPENAI_API_KEY=$OPENAI_API_KEY python3 fastapi_mcp_copilot.py",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:fastapi\"",
    "dev:mcp": "concurrently \"npm run dev\" \"npm run dev:fastapi\"",
    "test": "node test-mcp-integration.js",
    "test:smoke": "node demo.js",
    "test:advanced": "node advanced-demo.js",
    "test:copilot": "cd py && python3 headless_copilot_delegation.py",
    "test:copilot-headless": "cd py && python3 test_copilot_simple.py",
    "build": "echo 'Building Cartrita V2...' && npm install && cd py && pip install -r requirements.txt",
    "docker:build": "docker-compose -f docker-compose.hybrid-v2.yml build",
    "docker:up": "docker-compose -f docker-compose.hybrid-v2.yml up",
    "docker:dev": "docker-compose -f docker-compose.hybrid-v2.yml up --build",
    "lint": "eslint src/ --ext .js,.ts",
    "migrate:db": "psql -f db-init/init.sql",
    "copilot:demo": "cd py && OPENAI_API_KEY=$OPENAI_API_KEY python3 headless_copilot_delegation.py"
  },
  "keywords": [
    "ai",
    "agents",
    "fastify",
    "fastapi",
    "mcp",
    "copilot",
    "automation",
    "hybrid-architecture"
  ],
  "author": "Robbie Allen",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "fastify": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.8.1",
    "socket.io": "^4.7.2",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.1"
  }
}
