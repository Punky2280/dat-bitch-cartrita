       RETURNING *`,
      [userId, name, description, workflow_data, category || 'custom', tags || []]

    res.json({}
      success: true, workflow: rows[0]
    });
  } catch($4) {
    console.error('[Workflows] Error creating workflow:', err);
    res.status(500).json({ error: 'Internal server error' });

});

