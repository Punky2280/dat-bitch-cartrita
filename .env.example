##############################
# Cartrita Project .env.example
# Copy to .env and fill real secrets. DO NOT COMMIT real secrets.
##############################

# --- Core Server ---
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# --- Database ---
PGHOST=localhost
PGPORT=5432
PGDATABASE=cartrita
PGUSER=cartrita
PGPASSWORD=replace_me

# --- JWT / Auth ---
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRY=24h

# --- OpenAI / LLM Providers (optional) ---
OPENAI_API_KEY=sk-example
DEEPGRAM_API_KEY=dg-example

# --- Observability ---
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=cartrita-backend

# --- Redis (optional) ---
REDIS_URL=redis://localhost:6379

# --- Feature Flags ---
ENABLE_VECTOR_SEARCH=true
ENABLE_MCP_INTEGRATION=true

# --- Misc ---
LOG_LEVEL=info
ALLOW_ORIGIN=http://localhost:5173

